.container
  .row
    .col-xs-12
      .page-header
        .row
          .col-xs-6
            h4
              | Vacancies
              | 
              small ({{ vm.vacanciesCount }})
          
          .col-xs-6.text-right
            small
              a.btn.btn-link(href='/vacancies/new') Add


      table.table.table-hover(ng-if='vm.vacanciesCount > 0')
        thead
          tr
            th ID
            th Title
            th salary
            th contacts
            th created_at 
            th expired_at
            
        tbody
          tr(ng-repeat='vacancy in vm.vacancies')
            td {{ vacancy.id }}
            td {{ vacancy.title }}
            td {{ vacancy.salary }}
            td {{ vacancy.contacts }}
            td {{ vacancy.created_at | date:'medium' }}
            td {{ vacancy.expired_at | date:'medium' }}