.container
  .row
    .col-xs-12
      .page-header
        .row
          .col-xs-6
            h4
              | {{ 'VACANCIES' | translate }}
              | 
              small ({{ vm.vacanciesCount }})
          
          .col-xs-6.text-right
            small
              a.btn.btn-link(href='/vacancies/new') {{ 'ADD_VACANCY' | translate }}


      table.table.table-hover(ng-if='vm.vacanciesCount > 0')
        thead
          tr
            th {{ 'ID' | translate }}
            th {{ 'VACANCY_TITLE' | translate }}
            th {{ 'VACANCY_SALARY' | translate }}
            th {{ 'VACANCY_CONTACTS' | translate }}
            th {{ 'VACANCY_CREATED_AT' | translate }} 
            th {{ 'VACANCY_EXPIRED_AT' | translate }}
            th
            
        tbody
          tr(ng-repeat='vacancy in vm.vacancies')
            td {{ vacancy.id }}
            td
              a(ng-href='/vacancies/{{ vacancy.id }}') {{ vacancy.title }}
            td {{ vacancy.salary }}
            td {{ vacancy.contacts }}
            td {{ vacancy.created_at | date:'medium' }}
            td {{ vacancy.expired_at | date:'medium' }}
            td.text-right
              a(ng-href='/vacancies/{{ vacancy.id }}/edit') {{ 'EDIT' | translate }}