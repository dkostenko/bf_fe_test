.container
  .row
    .col-xs-6.col-xs-offset-3
      .page-header
        h4 {{ 'ADDING_VACANCY' | translate }}


      form(ng-submit='vm.createVacancy()')
        .form-group
          label(for='title') {{ 'VACANCY_TITLE' | translate }}
          input#title.form-control(
            type='text', 
            placeholder="{{ 'VACANCY_TITLE_EXAMPLE' | translate }}",
            ng-model='vm.vacancy.title',
            ng-required='true'
          )

        .form-group
          label(for='contacts') {{ 'VACANCY_CONTACTS' | translate }}
          input#contacts.form-control(
            type='text', 
            placeholder="{{ 'VACANCY_CONTACTS_EXAMPLE' | translate }}",
            ng-model='vm.vacancy.contacts',
            ng-required='true'
          )

        .form-group
          label(for='salary') {{ 'VACANCY_SALARY' | translate }}
          input#salary.form-control(
            type='number', 
            placeholder="{{ 'VACANCY_SALARY_EXAMPLE' | translate }}", 
            min='0', 
            max='2147483647',
            ng-model='vm.vacancy.salary',
            ng-required='true'
          )

        .form-group
          label(for='expired_at') {{ 'VACANCY_EXPIRED_AT' | translate }}
          input#expired_at.form-control(
            type='date', 
            placeholder="{{ 'VACANCY_EXPIRED_AT_EXAMPLE' | translate }}",
            ng-model='vm.vacancy.expired_at',
            ng-required='true'
          )

        button.btn.btn-default(type='submit') {{ 'SAVE' | translate }}
